{
    "manifest_version" : 2,
    "name"             : "StackOverflow Notifications",
    "version"          : "1.0",

    "description"      : "See when you receive notifications from StackOverflow",

    "icons"            : {
        "128" : "resources/images/extension.jpg"
    },

    "browser_action"   : {
        "default_icon"  : "resources/images/stackoverflow_16.png"
    },

    "background"       : {
        "page" : "background/background.html"
    },

    "content_security_policy": "script-src 'self' https://code.jquery.com https://api.stackexchange.com; object-src 'self'",

    "permissions"      : [
        "identity",
        "https://stackexchange.com/*/*",
        "https://code.jquery.com/*/*"
    ]
}
